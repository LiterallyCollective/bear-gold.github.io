<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.tugaleak" name="Tugaleak" version="1.7" provider-name="FORCE">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <language></language>
        <summary lang="en">Watch content from tugaleak.com</summary>
        <description lang="en">With this addon you can watch the files available on your tugaleak.com</description>
        <platform>all</platform>
        <website>https://tugaleak.com/video</website>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
